<div class="container">
  <div class="main-card">  
    <div class="main-card-image">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, height: 100, width: 100 %>
      <% else %>
        <%= image_tag 'https://f1.pngfuel.com/png/386/684/972/face-icon-user-icon-design-user-profile-share-icon-avatar-black-and-white-silhouette-png-clip-art.png', height: 100, width: 100 %>
      <% end %>
    </div>
    <div class="main-card-details">
      <div> <h2>Hello <%= @user.username %></h2> </div>
      <div> Member since <%= @user.created_at.strftime("%F") %> </div>
    </div>
  </div>
</div>
