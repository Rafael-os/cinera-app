<% if user_signed_in? %>
  <div class="container my-3">
  <div class="main-content">
    <div class="feed">
    <% @posts.reverse_each do |post| %>
      <%= render 'post', post: post %>
    <% end %>

    </div>
    <div class="categories">
    <%= form_tag(root_path, method: 'get', class: "search-form") do %>
      <div id= "search-data" class="form-search search-data" data-movies="<%= @movies.to_json %>">
        <%= text_field_tag :query, nil, autocomplete: :off, class: "form-control rounded-pill", placeholder: "Find a movie" %>
        <%= button_tag(type:"submit", class: "btn btn-laranja rounded-pill") do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    <% end %>
     
      <% @genres.each do |genre|%>
        <%= link_to genre.name, root_path(genre: genre.id), class: "btn btn-laranja rounded-pill border"%>  
      <% end %> 
      <%= link_to "Watch a movie", genres_path, class: "btn btn-watch rounded-pill border", style: "font-weight: bold; color: black;"%>
    </div>
  </div>
  </div>
<% else %>
  <div class="banner">
    <div class="text-center">
      <a href="users/sign_up" class="btn btn-primary btn-lg border"> Sign up!</a>
    </div>
    <div class="infos container">
      <div class="card transparent" style="width: 18rem;">
        <%= image_tag "friends-icon.png", class: "card-img-top icons" %>
        <div class="card-body">
          <p class="card-text" style="color: #000000">Keep in touch with your friends.</p>
        </div>
      </div>
      <div class="card transparent" style="width: 18rem;">
        <%= image_tag "film.png", class: "card-img-top icons" %>
        <div class="card-body">
          <p class="card-text" style="color: #000000">Get movies recommendations based on your taste.</p>
        </div>
      </div>
      <div class="card transparent" style="width: 18rem;">
        <%= image_tag "ticket.png", class: "card-img-top icons" %>
        <div class="card-body">
          <p class="card-text" style="color: #000000">Share your opinions about a movie!</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
